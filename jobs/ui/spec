---
name: ui

packages:
  - harbor

templates:
  bin/ui_ctl: bin/ui_ctl
  config/app.conf: config/app.conf
  config/key: config/key
  config/private_key.pem: config/private_key.pem

provides:
  - name: ui
    type: ui
    properties:
      - ui.port
      - ui.secret

consumes:
  - name: ui
    type: ui
  - name: adminserver
    type: adminserver
  - name: jobservice
    type: jobservice

properties:
  ui.port:
    description: "UI listen port"
    default: 80
  ui.log_level:
    description: "UI Log Level"
    default: info
  ui.secret:
    description: "UI secret"
  ui.private_key:
    description: "UI private key (PEM format)"
